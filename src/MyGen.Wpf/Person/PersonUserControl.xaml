<UserControl x:Class="MyGen.Wpf.Person.PersonUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MyGen.Wpf.Person"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:PersonViewModel, IsDesignTimeCreatable=False}">
    <Grid Margin="10">
      <TextBlock Text="{Binding FullName}" FontSize="20" FontFamily="Calibri Light"></TextBlock>
    </Grid>
</UserControl>